{
  "name": "URL Toggle",
  "version": "1.3",
  "description": "Toggle between sites that share URL pieces.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "index.html",
  "page_action": {
    "default_title": "Toggle!"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "icons": {
    "16": "swap-16.png",
    "48": "swap-48.png",
    "128": "swap-128.png"
  },
  "manifest_version": 2
}
